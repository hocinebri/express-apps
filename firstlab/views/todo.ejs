<!DOCTYPE html>
<html>
	<head>
		<title>My Todolist</title>
	</head>
	<body>
		<h1>My Todolist</h1>
		<ul>
			<% todolist.forEach(function(todo, index){%>
				<li><a href="/todo/delete/<%=index%>">X</a> <%=todo%></li>
				
			<%});%>
				
			%>
		</ul>
		<form action="/todo/add/" method="post">
			<p>
				<label for="newtodo">What I have to do?</label>
				<input type="text" name="newtodo" autofocus/>
				<input type="submit"/>
			</p>
		</form>
		
	</body>
</html>
